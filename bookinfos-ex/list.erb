<% # -*- coding: utf-8 -*- %>
<% require 'rubygems' %>
<% require 'dbi' %>
<% #データベースの接続とオートコミットのオフ  %>
<% dbh = DBI.connect( 'DBI:SQLite3:bookinfo_sqlite.db') %>
<% dbh['AutoCommit'] = false%>
<% dbh.transaction do %>
<% sth = dbh.execute("select * from bookinfos;") %>

<html>
<head>
  <meta http-equiv="Content-Type" content="text/html";
  charset=UTF-8 />
  <link rel="stylesheet" type="text/css" href="defalut.css">
  <title>蔵書管理</title>
</head>
<body>
  <h1>蔵書管理</h1>
  <h2>蔵書データの表示</h2>
  <p>
    処理する蔵書データを表示してください  |
    <a href= "entry.erb">蔵書データの登録</a> |
    <a href= "retrieve.erb">蔵書データの検索</a> |
    <a href= "index.html">メニュー画面に戻る</a>
  </p>
  <hr>
  <form class="freekeyword" action="freekeyword" method="post">
    <p>
      フリーキーワード検索: <input type="text" name="keyword" value="" placeholder="キーワード">
      <input type="submit" value="検索">
    </p>
  </form>
  <form method="post" action="list"/>
  <div class="tablescroll">
    <table class="list">
      <tr>
        <th>削除</th>
        <th>修正</th>
        <% sth.column_names.each do |name| %>
        <th><%= "#{name}" %></th>
        <% end %>
      </tr>

      <% sth.each do |row| %>
        <tr>
        <% row.each_with_name do | val, name| %>
        <% if name == 'id' then %>
          <td><input type="radio" name="operation" value=<%= "#{val}.delete" %> ></td>
          <td><input type="radio" name="operation" value=<%= "#{val}.edit" %> ></td>
        <% end %>
        <td> <%= "#{val.to_s}" %> </td>
      <% end %>
      </tr>
    <% end %>
    </table>
  </div>
  <input type="submit" value="選択した処理を実行" />
  <hr>
</body>
</html>
<% sth.finish %>
<% end %>
<% dbh.disconnect %>
