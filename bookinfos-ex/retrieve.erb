<%# -*- coding: utf-8 -*- %>
<% jpnametable={
  'id' => "ID",
  'title' => "タイトル",
  'author' => "著者名",
  'yomi' => "よみがな",
  'publisher' => "出版社",
  'page' => "ページ数",
  'price' => "本体価格",
  'purchase_price' => "購入価格",
  'isbn_10' => "ISBN-10",
  'isbn_13' => "ISBN-13",
  'size' => "寸法",
  'publish_date' => "出版日",
  'purchase_date' => "購入日",
  'purchase_reason' => "購入理由",
  'notes' => "備考"
} %>

<html>
<head>
  <meta http-equiv="Content-Type" content="text/html";
  charset=UTF-8 />
  <link rel="stylesheet" type="text/css" href="defalut.css">
  <title>蔵書管理</title>
</head>
<body>
  <h1>蔵書管理</h1>
  <h2>蔵書データの検索</h2>
  <p>
    検索条件を入力してください|
    <a href="/mainlist">蔵書データの表示</a>
    <a href="index.html">メニュー画面に戻る</a>
  </p>
  <hr>

  <form action="retrieve" method="post">
    <div class="tablescroll">
    <table>
      <tr>
        <th>
          項目名
        </th>
        <th>
          検索データ
        </th>
      </tr>
      <% ['id', 'title', 'author', 'yomi', 'publisher', 'page', 'price', 'purchase_price', 'isbn_10', 'isbn_13', 'size', 'publish_date','purchase_date', 'purchase_reason', 'notes' ].each do |name| %>
      <tr>
        <td>
          <%= jpnametable[name].escapeHtml %>
        </td>
        <td>
          <input type="text" name="<%= name %>" value="" size="60">
        </td>
      </tr>
      <% end %>
    </table>
    </div>
    <input type="submit" value="検索を実行">
  </form>
</body>
</html>
